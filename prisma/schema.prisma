generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ChatResponse {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  keyword  String @unique
  response String
}

model Box {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String   @unique
  description  String
  price        Float
  contents     String[]
  availability String   @default("disponible")
}

model Store {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  address String
  phone   String
  hours   Json
  isOpen  Boolean
}

model Order {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  items     Json     
  total     Float
  status    String   @default("pending")
  createdAt DateTime @default(now())
}